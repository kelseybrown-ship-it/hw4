<h1>New Entry for <%= @place["name"] %></h1>

<% if @current_user != nil %>
  <form action="/entries" method="post" enctype="multipart/form-data">

    <div class="mb-3">
      <label for="title_input" class="form-label">Title</label>
      <input type="text" class="form-control" name="title" id="title_input">
    </div>

      <div class="mb-3">
      <label for="description_input" class="form-label">Description</label>
      <input type="text" class="form-control" name="description" id="description_input">
    </div>

    <div class="mb-3">
      <label for="occurred_on_input" class="form-label">Occurred On</label>
      <input type="date" class="form-control" name="occurred_on" id="occurred_on_input">
    </div>

    <!--<div class="mb-3">
        <label for="image" class="form-label">Image URL</label>
      <input type="text" class="form-control" name="image" id="image">
    </div> -->

    <div class="mb-3">
      <label for="uploaded_image_input" class="form-label">Upload Image</label>
      <input type="file" name="uploaded_image" id="uploaded_image_input" class="form-control" accept="image/png, image/jpg, image/jpeg, image/gif">
    </div>

    <input type="hidden" name="place_id" value="<%= params["place_id"] %>">
     <input type="hidden" name="user_id" value="<%= session["user_id"] %>">
  
   
   <input class="btn btn-primary" type="submit" value="Save">
  <a class="btn btn-primary" href="/places" role="button">Cancel</a> 
  </form>

<% else %>
  You must first <a href="/login">login</a> to post.
<% end %>